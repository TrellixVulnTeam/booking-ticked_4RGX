<div class="container">
  <div class="mt-5 mb-5">
    <h3 class="title-admin">Thêm phim</h3>
    <a class="d-block mb-3 action-item" href="/me/stored/movies">&#8592; Danh sách phim</a>
    <form method="POST" action="/movies/store">
      <div class="form-group d-flex">
        <div class="col-lg-6">
          <label for="name">Tên</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="col-lg-6">
          <label for="director">Đạo diễn</label>
          <input type="text" class="form-control" id="director" name="director" />
        </div>
      </div>
      <div class="form-group d-flex">
        <div class="col-lg-6">
          <label for="trailerId">Trailer ID</label>
          <input type="text" class="form-control" id="trailerId" name="trailerId" />
        </div>
        <div class="col-lg-6">
          <label for="time">Thời gian</label>
          <input type="text" class="form-control" id="time" name="time" />
        </div>
      </div>
      <div class="form-group d-flex">
        <div class="col-lg-6">
          <label for="ageLimit">Giới hạn độ tuổi</label>
          <input type="text" class="form-control" id="ageLimit" name="ageLimit" />
        </div>
        <div class="col-lg-6">
          <label for="releaseDay">Ngày khởi chiếu</label>
          <input type="text" class="form-control" id="releaseDay" name="releaseDay" />
        </div>    
      </div>
      <div class="form-group d-flex">
        <div class="col-lg-6">
          <label for="language">Ngôn ngữ</label>
          <input type="text" class="form-control" id="language" name="language" />
        </div>
        <div class="col-lg-6">
          <label for="actor">Diễn viên</label>
          <input type="text" class="form-control" id="actor" name="actor" />
        </div>
      </div>
      <div class="form-group d-flex">
        <div class="col-lg-6">
          <label for="country">Quốc gia</label>
          <input type="text" class="form-control" id="country" name="country" />
        </div>
        <div class="col-lg-6">
          <label for="status">Trạng thái</label>
          <input type="text" class="form-control" id="status" name="status" />
        </div>
      </div>
      <div class="form-group d-flex">
        <div class="col-lg-6">
          <label for="category">Thể loại</label>
          <input type="text" class="form-control" id="category" name="category" />
        </div>
        <div class="col-lg-6">
          <label for="img">Link ảnh</label>
          <input type="text" class="form-control" id="img" name="img" />
        </div>
      </div>
      <div class="form-group col-lg-12">
        <label for="summary">Tóm tắt</label>
          <textarea
            type="text"
            class="form-control"
            id="summary"
            name="summary"
            rows="6"
          ></textarea>
      </div>
      <button type="submit" class="btn btn-submit align-items-center col-lg-6">Thêm phim</button>
    </form>
  </div>
</div>