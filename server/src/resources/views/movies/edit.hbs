<div class="container">
  <div class="mt-4">
    <h3 class="title-admin">Sửa phim</h3>
    <a class="d-block mb-3 action-item" href="/me/stored/movies">&#8592; Danh sách phim</a>
    <form method="POST" action="/movies/{{movie._id}}?_method=PUT">
      <div class="form-group">
        <label for="name">Tên</label>
        <input type="text" class="form-control" value="{{movie.name}}" id="name" name="name" />
      </div>
      <div class="form-group">
        <label for="summary">Tóm tắt</label>
        <textarea
          class="form-control" id="summary"
          name="summary" rows="5"
        >{{movie.summary}}</textarea>
      </div>
      <div class="form-group">
        <label for="trailerId">Trailer ID</label>
        <input type="text" class="form-control" value="{{movie.trailerId}}" id="trailerId" name="trailerId" />
      </div>
      <div class="form-group">
        <label for="time">Thời gian</label>
        <input type="text" class="form-control" value="{{movie.time}}" id="time" name="time" />
      </div>
      <div class="form-group">
        <label for="ageLimit">Giới hạn độ tuổi</label>
        <input type="text" class="form-control" value="{{movie.ageLimit}}" id="ageLimit" name="ageLimit" />
      </div>
      <div class="form-group">
        <label for="releaseDay">Ngày khởi chiếu</label>
        <input type="text" class="form-control" value="{{movie.releaseDay}}" id="releaseDay" name="releaseDay" />
      </div>
      <div class="form-group">
        <label for="language">Ngôn ngữ</label>
        <input type="text" class="form-control" value="{{movie.language}}" id="language" name="language" />
      </div>
      <div class="form-group">
        <label for="actor">Diễn viên</label>
        <input type="text" class="form-control" value="{{movie.actor}}" id="actor" name="actor" />
      </div>
      <div class="form-group">
        <label for="country">Quốc gia</label>
        <input type="text" class="form-control" value="{{movie.country}}" id="country" name="country" />
      </div>
      <div class="form-group">
        <label for="status">Trạng thái</label>
        <input type="text" class="form-control" value="{{movie.status}}" id="status" name="status" />
      </div>
      <div class="form-group">
        <label for="category">Thể loại</label>
        <input type="text" class="form-control" value="{{movie.category}}" id="category" name="category" />
      </div>
      <div class="form-group">
        <label for="img">Link ảnh</label>
        <input type="text" class="form-control" value="{{movie.img}}" id="img" name="img" />
      </div>
      <div class="form-group">
        <label for="director">Đạo diễn</label>
        <input type="text" class="form-control" value="{{movie.director}}" id="director" name="director" />
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>
</div>