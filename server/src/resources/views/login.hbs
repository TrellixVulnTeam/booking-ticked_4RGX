<div class="container">
  <div class="login-form col-lg-6">
    <h3 class="title">Đăng nhập</h3>
    <form action="/login" method="POST">
      <div class="form-group">
          <label for="email">
            <span style="color: red">*</span>&nbsp;Email
          </label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="Email"
          />
      </div>
      <div class="form-group">
          <label for="password">
            <span style="color: red">*</span>&nbsp;Mật khẩu
          </label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Mật khẩu"
          />
      </div>
      <a class="d-block mb-2" href="/register">Chưa có tài khoản?</a>
      <button class="btn-submit" type="submit" class="btn btn-primary">Đăng nhập</button>
    </form>
  </div>
</div>